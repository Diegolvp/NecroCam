<Page x:Class="NecroCam.Views.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NecroCam.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid>
        <StackPanel>
            <Label Content="{Binding Status}" HorizontalAlignment="Center" Margin="0 50 0 0" FontSize="20" FontWeight="Bold"/>
            <Button Content="{Binding StartStopButtonText}" Width="200" Height="60" Margin="0 100 0 0" RenderTransformOrigin="0.5, 0.5" Command="{Binding ToggleOBSCommand}" IsEnabled="{Binding IsButtonEnable}"/>
        </StackPanel>
    </Grid>
</Page>
